<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/Decorators">
	<!-- Any urls that are excluded will never be decorated by Sitemesh -->
	<excludes>
		<pattern>/40*</pattern>
		<pattern>/html/*</pattern>
		<pattern>*.htm</pattern>
		<pattern>*.html</pattern>
		<pattern>/api/*</pattern>
		<pattern>/ckeditor/*</pattern>
		<pattern>/admin/login</pattern>
		<pattern>/admin/index</pattern>
		<pattern>/admin/menu</pattern>
		<pattern>/admin/gallery/*</pattern>
	</excludes>
	
	<decorator name="admin" page="Admin/Admin.ftl">
		<pattern>/admin*</pattern>
	</decorator>
	
	<decorator name="userhome" page="Web/UserHome.ftl">
		<pattern>/myhome*</pattern>
	</decorator>
	
	<decorator name="web" page="Web/Web.ftl">
		<pattern>/*</pattern>
	</decorator>
	
